{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "strictNullChecks": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
